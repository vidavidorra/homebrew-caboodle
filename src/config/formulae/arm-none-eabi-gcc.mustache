class {{{name}}} < Formula
  desc "GNU Arm Embedded Toolchain"
  homepage "https://developer.arm.com/tools-and-software/open-source-software/developer-tools/gnu-toolchain/gnu-rm"
  version "{{{version}}}"
  url "{{{url}}}"
  sha256 "{{{sha256}}}"

  keg_only :versioned_formula

  bottle :unneeded

  def install
    (prefix/"gcc").install Dir["./*"]
    Dir.glob(prefix/"gcc/bin/*") { |file| bin.install_symlink file }
  end
end
